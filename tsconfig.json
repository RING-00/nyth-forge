{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@base/*": ["./src/common/base/*"],
      "@config": ["./src/config/index"],
      "@consts": ["./src/common/constants/index"],
      "@modules/*": ["./src/modules/*"],
      "@types": ["./src/common/types/index"],
      "@utils": ["./src/common/utils/index"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["bun-types"]
  }
}
